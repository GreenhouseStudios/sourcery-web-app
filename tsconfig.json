{
    "compilerOptions": {
        "target": "ES2018",
        "module": "ESNext",
        "moduleResolution": "Node",
        "lib": [
            "ESNext",
            "ESNext.AsyncIterable",
            "DOM"
        ],
        "esModuleInterop": true,
        "allowJs": true,
        "sourceMap": true,
        "strict": true,
        "noEmit": false,
        "baseUrl": ".",
        "paths": {
            "~/*": [
                "./*"
            ],
            "@/*": [
                "./*"
            ]
        },
        "types": [
            "@types/node",
            "vuetify",
            "@nuxt/types",
            "@nuxtjs/firebase"
        ],
        "typeRoots": [
            "./node_modules/@types",
            "./node_modules/vuetify/types"
        ]
    },
    "exclude": [
        "node_modules",
        "supabase/**"
    ],
    "include": ["node_modules/vuetify/types", "**/*"]
}
