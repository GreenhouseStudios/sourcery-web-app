{
    "src_folders": [
        "tests"
    ],
    "exclude": [
        "tests/globals.js",
        "tests/custom-commands/"
    ],
    "webdriver": {
        "start_process": true,
        "server_path": "node_modules/.bin/chromedriver",
        "cli_args": [
            "--verbose"
        ],
        "port": 9515
    },
    "test_settings": {
        "default": {
            "desiredCapabilities": {
                "browserName": "chrome",
                "chromeOptions": {
                    "args": [
                        "verbose",
                        "window-size=800,1200"
                    ]
                }
            },
            "globals": {
                "asyncHookTimeout": 60000
            }
        }
    },
    "globals_path": "tests/globals.js",
    "custom_commands_path": "./tests/custom-commands"
}
